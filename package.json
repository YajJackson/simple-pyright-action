{
    "name": "simple-pyright-action",
    "version": "1.0.0",
    "description": "GitHub Action that adds pyright checks to python pull requests.",
    "author": "Jay Jackson",
    "main": "dist/index.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/YajJackson/simple-pyright-action.git"
    },
    "scripts": {
        "build": "esbuild src/index.ts --bundle --outfile=dist/index.js --platform=node --target=node20 --main-fields=module,main"
    },
    "keywords": [
        "python",
        "pyright",
        "github",
        "github-actions"
    ],
    "license": "MIT",
    "dependencies": {
        "@actions/core": "^1.10.1",
        "@actions/exec": "^1.1.1",
        "@actions/github": "^6.0.0",
        "@badrap/valita": "^0.3.6",
        "octokit": "^3.1.2",
        "typescript": "^5.4.3"
    },
    "devDependencies": {
        "@types/node": "^20.11.30",
        "esbuild": "^0.20.2"
    }
}
